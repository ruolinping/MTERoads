@model MTERoads.Models.TransactionsViewModel

<div id="tranWebGrid">
    @{
        var grid = new WebGrid(Model.TransactionsList, canPage: true, rowsPerPage: 5,
        selectionFieldName: "AutoNumber", ajaxUpdateContainerId: "gridContent");
        grid.Pager(WebGridPagerModes.NextPrevious);
    }
    @grid.GetHtml(tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    selectedRowStyle: "webgrid-selected-row",
    rowStyle: "webgrid-row-style",
    columns: grid.Columns(
            grid.Column(columnName: "Emp_Name", header: "Employee Name"),
            grid.Column(columnName: "Machine", header: "Machine Description"),
            grid.Column(columnName: "Road", header: "Road Name"),
            grid.Column(columnName: "Activity", header: "Activity"),
            grid.Column(columnName: "Hours", header: "Hours"),
            grid.Column(columnName: "Lease_Chg", header: "Lease Charge"),
            grid.Column(columnName: "", format: (item) => Ajax.ActionLink("Edit", "EditTransaction", new { AutoNumber = item.AutoNumber }, new AjaxOptions { UpdateTargetId = "divTransactionsWebGrid" }, new {@class = "btnEditTran" }))
            //@Ajax.ActionLink("Up", "Up", "Home", new { Model.JokeId }, new AjaxOptions { UpdateTargetId = "divjoke" + Model.JokeId } null)
            )
        )
</div>